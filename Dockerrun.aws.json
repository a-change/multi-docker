{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "nikolaysemyonov/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "nikolaysemyonov/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "nikolaysemyonov/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "nikolaysemyonov/multinginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": ["client", "server"]
        }
        
    ]
}